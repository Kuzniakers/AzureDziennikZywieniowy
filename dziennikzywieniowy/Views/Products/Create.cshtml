@model dziennikzywieniowy.Models.Product

<h2>Dodaj Zakupiony Produkt</h2>

<form asp-action="Create" method="post" class="form">
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Nazwa produktu</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Category" class="form-label">Kategoria</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label">Cena</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
